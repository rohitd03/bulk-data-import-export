		{
			"name": "Import - Users",
			"item": [
				{
					"name": "Import Users (CSV File Upload)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.job_id) {",
									"    pm.environment.set('user_import_job_id', jsonData.job_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Idempotency-Key",
								"value": "{{$guid}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": "import_testdata_all_in_one/users_huge.csv"
								},
								{
									"key": "resource",
									"value": "users",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/v1/imports",
							"host": ["{{base_url}}"],
							"path": ["v1", "imports"]
						}
					},
					"response": []
				},
				{
					"name": "Get User Import Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/imports/{{user_import_job_id}}",
							"host": ["{{base_url}}"],
							"path": ["v1", "imports", "{{user_import_job_id}}"]
						}
					},
					"response": []
				},
				{
					"name": "Get User Import Errors",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/imports/{{user_import_job_id}}/errors?limit=50&offset=0",
							"host": ["{{base_url}}"],
							"path": ["v1", "imports", "{{user_import_job_id}}", "errors"],
							"query": [
								{
									"key": "limit",
									"value": "50"
								},
								{
									"key": "offset",
									"value": "0"
								}
							]
						}
					},
					"response": []
				}
			]
		},
