				{
					"name": "Create Async Export Users",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.job_id) {",
									"    pm.environment.set('user_export_job_id', jsonData.job_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"resource\": \"users\",\n    \"format\": \"ndjson\",\n    \"filters\": {\n        \"active\": true\n    }\n}"
						},
						"url": {
